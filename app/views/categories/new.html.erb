<%= form_with(model: @category) do |f| %>
<h1> Create New Category </h1>
<p>
    <% if @category.errors.any? %>
        <ul>
            <% @category.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>
</p>

<p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
</p>

<%= link_to '<< return', categories_path%>
<%= f.submit %>

<% end %> 