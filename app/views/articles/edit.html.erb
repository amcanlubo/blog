<div class='p-5'>
<%# <%= render "form", article: @article, url:article_path %> 
<%= form_with scope: :article, url: article_path, local: true, method: :patch do |f| %>
<h1>EDIT ARTICLE</h1>
<p>
    <% if @article.errors.any? %>
        <ul>
            <% @article.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>
</p>

<p>
    <%= f.label :name %><br/>
    <%= f.text_field :name, class: 'w-full mt-2 mb-6 px-4 py-2 border rounded-lg text-gray-700 focus:outline-none focus:border-green-500' %>
</p>

<p>
    <%= f.label :body %><br/>
    <%= f.text_area :body, class: 'w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none h-3/5'%>
</p>

<p>
    <%= link_to '<< return', articles_path%>
    <%= f.submit 'Submit', class:'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full' %>  
</p>

<% end %>
</div>
