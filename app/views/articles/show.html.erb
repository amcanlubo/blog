<div class='p-5'>
    <p><strong><%= @article.name %></strong></p>
    <p><%= @article.body %></p>
     
    </br>
    </br>
    <h2><strong><%= @article.comments.count %> comments </strong> </h2>
   
    
    
    <%= render 'comments/index', comments: @comments %>
    
    <h2><strong>Add a comment:</strong></h2>
    <%= render 'comments/form' %>
    
    </br>
    </br>
    <%= link_to '<< return to articles', articles_path%>
    <button class="bg-green-500 p-1 text-white hover:text-black rounded"><%= link_to "Edit article", edit_article_path(@article) %></button>
    <button class="bg-red-500 p-1 text-white hover:text-black rounded"><%= link_to "Delete article", article_path(@article), 
                                    method: :delete,
                                    data: { confirm: "Are you sure you want to delete this article?" }%></button>



</div>