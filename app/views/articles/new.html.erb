<%# <%= render "form", article: @article, url:articles_path %>
<div class='p-5'>
<%= form_with model: @article, local: true do |f| %>
<h1> Create New Article </h1>
<p>
    <% if @article.errors.any? %>
        <ul>
            <% @article.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>
</p>

<p>
    <%= f.label :name  %><br/>
    <%= f.text_field :name, class: 'w-full mt-2 mb-6 px-4 py-2 border rounded-lg text-gray-700 focus:outline-none focus:border-green-500' %>
</p>

<p>
    <%= f.label :body %><br/>
    <%= f.text_area :body, class: 'w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none h-3/5' %>
</p>

    <%= link_to '<< return', articles_path%>
    <%= f.submit 'Create new article', class:'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full'%>

<% end %> 
</div>